import express from "express";
import cors from "cors";
import dotenv from "dotenv";
import Razorpay from "razorpay";

dotenv.config();

const app = express();
const PORT = process.env.PORT || 5000;

// -------------------
// Middlewares
// -------------------
app.use(cors({
  origin: "*", // production me specific domain daalna
  methods: ["GET", "POST"]
}));

app.use(express.json());

// -------------------
// Razorpay Setup
// -------------------
if (!process.env.RAZORPAY_KEY_ID || !process.env.RAZORPAY_KEY_SECRET) {
  console.error("âŒ Razorpay keys missing in .env");
  process.exit(1);
}

const razorpay = new Razorpay({
  key_id: process.env.RAZORPAY_KEY_ID,
  key_secret: process.env.RAZORPAY_KEY_SECRET
});

// -------------------
// Routes
// -------------------
app.get("/", (req, res) => {
  res.status(200).json({
    status: "success",
    message: "ğŸš€ Ritwik AI Backend Running Successfully"
  });
});

app.post("/api/create-order", async (req, res) => {
  try {
    const { amount } = req.body;

    // Validation
    if (!amount || isNaN(amount) || amount <= 0) {
      return res.status(400).json({
        status: "error",
        message: "Invalid amount"
      });
    }

    const options = {
      amount: Math.round(amount * 100), // convert â‚¹ to paise safely
      currency: "INR",
      receipt: â â€¯receipt_${Date.now()}â€¯â 
    };

    const order = await razorpay.orders.create(options);

    res.status(200).json({
      status: "success",
      order
    });

  } catch (error) {
    console.error("Order Error:", error);

    res.status(500).json({
      status: "error",
      message: "Failed to create order"
    });
  }
});

// -------------------
// Server Start
// -------------------
app.listen(PORT, () => {
  console.log(â â€¯ğŸš€ Server running on port ${PORT}â€¯â );
});
